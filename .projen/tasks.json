{
  "tasks": {
    "build": {
      "name": "build",
      "description": "Full release build",
      "steps": [
        {
          "spawn": "default"
        },
        {
          "spawn": "pre-compile"
        },
        {
          "spawn": "compile"
        },
        {
          "spawn": "post-compile"
        },
        {
          "spawn": "test"
        },
        {
          "spawn": "package"
        }
      ]
    },
    "bump": {
      "name": "bump",
      "description": "Bumps version based on latest git tag and generates a changelog entry",
      "env": {
        "OUTFILE": "package.json",
        "CHANGELOG": "dist/changelog.md",
        "BUMPFILE": "dist/version.txt",
        "RELEASETAG": "dist/releasetag.txt",
        "RELEASE_TAG_PREFIX": ""
      },
      "steps": [
        {
          "builtin": "release/bump-version"
        }
      ],
      "condition": "! git log --oneline -1 | grep -q \"chore(release):\""
    },
    "bundle": {
      "name": "bundle",
      "description": "Prepare assets",
      "steps": [
        {
          "spawn": "bundle:functions/NightyNightForAsg.lambda"
        },
        {
          "spawn": "bundle:functions/NightyNightForEc2.lambda"
        },
        {
          "spawn": "bundle:functions/NightyNightForRds.lambda"
        },
        {
          "spawn": "bundle:functions/WakeyWakeyForEc2.lambda"
        },
        {
          "spawn": "bundle:functions/WakeyWakeyForRds.lambda"
        }
      ]
    },
    "bundle:functions/NightyNightForAsg.lambda": {
      "name": "bundle:functions/NightyNightForAsg.lambda",
      "description": "Create a JavaScript bundle from src/functions/NightyNightForAsg.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/NightyNightForAsg.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/NightyNightForAsg.lambda/index.js\" --external:aws-sdk"
        }
      ]
    },
    "bundle:functions/NightyNightForAsg.lambda:watch": {
      "name": "bundle:functions/NightyNightForAsg.lambda:watch",
      "description": "Continuously update the JavaScript bundle from src/functions/NightyNightForAsg.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/NightyNightForAsg.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/NightyNightForAsg.lambda/index.js\" --external:aws-sdk --watch"
        }
      ]
    },
    "bundle:functions/NightyNightForEc2.lambda": {
      "name": "bundle:functions/NightyNightForEc2.lambda",
      "description": "Create a JavaScript bundle from src/functions/NightyNightForEc2.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/NightyNightForEc2.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/NightyNightForEc2.lambda/index.js\" --external:aws-sdk"
        }
      ]
    },
    "bundle:functions/NightyNightForEc2.lambda:watch": {
      "name": "bundle:functions/NightyNightForEc2.lambda:watch",
      "description": "Continuously update the JavaScript bundle from src/functions/NightyNightForEc2.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/NightyNightForEc2.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/NightyNightForEc2.lambda/index.js\" --external:aws-sdk --watch"
        }
      ]
    },
    "bundle:functions/NightyNightForRds.lambda": {
      "name": "bundle:functions/NightyNightForRds.lambda",
      "description": "Create a JavaScript bundle from src/functions/NightyNightForRds.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/NightyNightForRds.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/NightyNightForRds.lambda/index.js\" --external:aws-sdk"
        }
      ]
    },
    "bundle:functions/NightyNightForRds.lambda:watch": {
      "name": "bundle:functions/NightyNightForRds.lambda:watch",
      "description": "Continuously update the JavaScript bundle from src/functions/NightyNightForRds.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/NightyNightForRds.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/NightyNightForRds.lambda/index.js\" --external:aws-sdk --watch"
        }
      ]
    },
    "bundle:functions/WakeyWakeyForEc2.lambda": {
      "name": "bundle:functions/WakeyWakeyForEc2.lambda",
      "description": "Create a JavaScript bundle from src/functions/WakeyWakeyForEc2.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/WakeyWakeyForEc2.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/WakeyWakeyForEc2.lambda/index.js\" --external:aws-sdk"
        }
      ]
    },
    "bundle:functions/WakeyWakeyForEc2.lambda:watch": {
      "name": "bundle:functions/WakeyWakeyForEc2.lambda:watch",
      "description": "Continuously update the JavaScript bundle from src/functions/WakeyWakeyForEc2.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/WakeyWakeyForEc2.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/WakeyWakeyForEc2.lambda/index.js\" --external:aws-sdk --watch"
        }
      ]
    },
    "bundle:functions/WakeyWakeyForRds.lambda": {
      "name": "bundle:functions/WakeyWakeyForRds.lambda",
      "description": "Create a JavaScript bundle from src/functions/WakeyWakeyForRds.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/WakeyWakeyForRds.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/WakeyWakeyForRds.lambda/index.js\" --external:aws-sdk"
        }
      ]
    },
    "bundle:functions/WakeyWakeyForRds.lambda:watch": {
      "name": "bundle:functions/WakeyWakeyForRds.lambda:watch",
      "description": "Continuously update the JavaScript bundle from src/functions/WakeyWakeyForRds.lambda.ts",
      "steps": [
        {
          "exec": "esbuild --bundle src/functions/WakeyWakeyForRds.lambda.ts --target=\"node14\" --platform=\"node\" --outfile=\"assets/functions/WakeyWakeyForRds.lambda/index.js\" --external:aws-sdk --watch"
        }
      ]
    },
    "clobber": {
      "name": "clobber",
      "description": "hard resets to HEAD of origin and cleans the local repo",
      "env": {
        "BRANCH": "$(git branch --show-current)"
      },
      "steps": [
        {
          "exec": "git checkout -b scratch",
          "name": "save current HEAD in \"scratch\" branch"
        },
        {
          "exec": "git checkout $BRANCH"
        },
        {
          "exec": "git fetch origin",
          "name": "fetch latest changes from origin"
        },
        {
          "exec": "git reset --hard origin/$BRANCH",
          "name": "hard reset to origin commit"
        },
        {
          "exec": "git clean -fdx",
          "name": "clean all untracked files"
        },
        {
          "say": "ready to rock! (unpushed commits are under the \"scratch\" branch)"
        }
      ],
      "condition": "git diff --exit-code > /dev/null"
    },
    "compat": {
      "name": "compat",
      "description": "Perform API compatibility check against latest version",
      "steps": [
        {
          "exec": "jsii-diff npm:$(node -p \"require('./package.json').name\") -k --ignore-file .compatignore || (echo \"\nUNEXPECTED BREAKING CHANGES: add keys such as 'removed:constructs.Node.of' to .compatignore to skip.\n\" && exit 1)"
        }
      ]
    },
    "compile": {
      "name": "compile",
      "description": "Only compile",
      "steps": [
        {
          "exec": "jsii --silence-warnings=reserved-word"
        }
      ]
    },
    "default": {
      "name": "default",
      "description": "Synthesize project files",
      "steps": [
        {
          "exec": "ts-node --project tsconfig.dev.json .projenrc.ts"
        }
      ]
    },
    "docgen": {
      "name": "docgen",
      "description": "Generate API.md from .jsii manifest",
      "steps": [
        {
          "exec": "jsii-docgen -o API.md"
        }
      ]
    },
    "eject": {
      "name": "eject",
      "description": "Remove projen from the project",
      "env": {
        "PROJEN_EJECTING": "true"
      },
      "steps": [
        {
          "spawn": "default"
        }
      ]
    },
    "eslint": {
      "name": "eslint",
      "description": "Runs eslint against the codebase",
      "steps": [
        {
          "exec": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test build-tools projenrc .projenrc.ts"
        }
      ]
    },
    "package": {
      "name": "package",
      "description": "Creates the distribution package",
      "steps": [
        {
          "exec": "if [ ! -z ${CI} ]; then rsync -a . .repo --exclude .git --exclude node_modules && rm -rf dist && mv .repo dist; else npx projen package-all; fi"
        }
      ]
    },
    "package-all": {
      "name": "package-all",
      "description": "Packages artifacts for all target languages",
      "steps": [
        {
          "spawn": "package:js"
        },
        {
          "spawn": "package:python"
        }
      ]
    },
    "package:js": {
      "name": "package:js",
      "description": "Create js language bindings",
      "steps": [
        {
          "exec": "jsii-pacmak -v --target js"
        }
      ]
    },
    "package:python": {
      "name": "package:python",
      "description": "Create python language bindings",
      "steps": [
        {
          "exec": "jsii-pacmak -v --target python"
        }
      ]
    },
    "post-compile": {
      "name": "post-compile",
      "description": "Runs after successful compilation",
      "steps": [
        {
          "spawn": "docgen"
        }
      ]
    },
    "pre-compile": {
      "name": "pre-compile",
      "description": "Prepare the project for compilation",
      "steps": [
        {
          "spawn": "bundle"
        }
      ]
    },
    "release": {
      "name": "release",
      "description": "Prepare a release from \"main\" branch",
      "env": {
        "RELEASE": "true",
        "MAJOR": "1"
      },
      "steps": [
        {
          "exec": "rm -fr dist"
        },
        {
          "spawn": "bump"
        },
        {
          "spawn": "build"
        },
        {
          "spawn": "unbump"
        },
        {
          "exec": "git diff --ignore-space-at-eol --exit-code"
        }
      ]
    },
    "test": {
      "name": "test",
      "description": "Run tests",
      "steps": [
        {
          "exec": "jest --passWithNoTests --all --updateSnapshot"
        },
        {
          "spawn": "eslint"
        }
      ]
    },
    "test:update": {
      "name": "test:update",
      "description": "Update jest snapshots",
      "steps": [
        {
          "exec": "jest --updateSnapshot"
        }
      ]
    },
    "test:watch": {
      "name": "test:watch",
      "description": "Run jest in watch mode",
      "steps": [
        {
          "exec": "jest --watch"
        }
      ]
    },
    "unbump": {
      "name": "unbump",
      "description": "Restores version to 0.0.0",
      "env": {
        "OUTFILE": "package.json",
        "CHANGELOG": "dist/changelog.md",
        "BUMPFILE": "dist/version.txt",
        "RELEASETAG": "dist/releasetag.txt",
        "RELEASE_TAG_PREFIX": ""
      },
      "steps": [
        {
          "builtin": "release/reset-version"
        }
      ]
    },
    "watch": {
      "name": "watch",
      "description": "Watch & compile in the background",
      "steps": [
        {
          "exec": "jsii -w --silence-warnings=reserved-word"
        }
      ]
    }
  },
  "env": {
    "PATH": "$(npx -c \"node -e \\\"console.log(process.env.PATH)\\\"\")"
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
